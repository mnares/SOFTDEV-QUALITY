<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
        name="general"
        label="GENERAL"
        >
        <field
            name="file_types"
            type="text"
            label="ALLOWED_FILE_TYPES"
            description="ALLOWED_FILE_TYPES_DESC"
            size="50"
            default="csv,doc,gif,ico,jpg,jpeg,pdf,png,txt,xls,svg,mp4"/>
        <field
            name="email_encryption"
            type="radio"
            label="EMAIL_ADDRESS_ENCRYPTION"
            description="EMAIL_ADDRESS_ENCRYPTION_DESC"
            class="btn-group btn-group-yesno"
            default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>
    <fieldset
        name="permissions"
        label="JCONFIG_PERMISSIONS_LABEL"
        description="JCONFIG_PERMISSIONS_DESC"
        >
        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            validate="rules"
            filter="rules"
            component="com_gridbox"
            section="component" />
    </fieldset>
</config>
